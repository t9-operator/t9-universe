<html lang="zh">
<head>
  <meta charset="UTF-8" />
  <title>T9-888 控制台</title>
  <style>
    body {
      background-color: black;
      color: gold;
      font-family: monospace;
      padding: 40px;
    }
    h1 {
      font-size: 2em;
      margin-bottom: 1em;
    }
    input, button {
      font-size: 1em;
      padding: 8px;
      margin-top: 10px;
    }
    .block {
      margin-bottom: 30px;
    }
  </style>
</head>
<body>
  <h1>编号控制台 · T9-888</h1>

  <div class="block">
    <h2>1️⃣ 输入任意编号</h2>
    <input type="text" id="inputNumber" placeholder="例如 T9-000">
    <button onclick="jumpToPath()">跳转路径</button>
    <p id="pathOutput" style="margin-top: 10px; opacity: 0.7;"></p>
  </div>

  <div class="block">
    <h2>2️⃣ 查看激活状态</h2>
    <input type="text" id="checkNumber" placeholder="输入编号">
    <button onclick="checkStatus()">查询状态</button>
    <p id="statusOutput" style="margin-top: 10px; opacity: 0.7;"></p>
  </div>

  <script>
    function jumpToPath() {
      const number = document.getElementById('inputNumber').value.trim();
      if (!number) return alert("请输入编号");
      const path = `/t9-universe/t9/${number.replace("T9-", "")}/main.html`;
      document.getElementById('pathOutput').innerText = `路径：${path}`;
      window.open(path, "_blank");
    }

    function checkStatus() {
      const num = document.getElementById('checkNumber').value.trim();
      if (!num) return alert("请输入编号");
      document.getElementById('statusOutput').innerText = `编号 ${num} 状态：🟡 结构接口存在（模拟查询）`;
    }
  </script>
</body>
</html>
